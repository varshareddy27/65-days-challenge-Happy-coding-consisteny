import java.util.*;
public class test
{
    public static void add(int n,int s){
        if (n==0){
            System.out.print("sum :"+s);
            return;
        }
        s+=n;
        //print(s);
        add(n-1,s);
        }
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        add(n,0);
    }
}


